<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory android:title="Settings">


        <Preference
            android:key="@string/key_edit_profile"
            android:title="@string/title_edit_profile">
            <intent
                android:action="android.intent.action.VIEW"
                android:targetClass="com.appspot.airpeepee.airpeepee.EditProfileActivity"
                android:targetPackage="com.appspot.airpeepee.airpeepee" />
        </Preference>


        <SwitchPreference
            android:defaultValue="false"
            android:key="@string/key_user"
            android:summaryOff="@string/summary_userOff"
            android:summaryOn="@string/summary_userOn"
            android:switchTextOff="User"
            android:switchTextOn="Provider"
            android:title="@string/title_user" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_title_support">


        <Preference
            android:key="@string/key_send_feedback"
            android:summary="@string/summary_support"
            android:title="@string/title_send_feedback" />

        <Preference
            android:title="@string/pref_header_about"
            android:summary="@string/summary_about"/>

    </PreferenceCategory>

</PreferenceScreen>